set icons true
set drawbox true
set preview true
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

cmd open ${{
	case $(file --mime-type "$f" -bL) in
		text/*|application/json) v "$f" ;;
		*) setsid -f xdg-open "$f" ;;
	esac
}}

cmd wall_temp ${{
	feh --bg-scale "$f"
}}

cmd mkwall ${{
	cp "$f" /home/probe/.config/bspwm/wal.jpg && bspc wm -r
}}

map bG mkwall
map bg wall_temp
map D delete
map A rename
map <enter> shell
